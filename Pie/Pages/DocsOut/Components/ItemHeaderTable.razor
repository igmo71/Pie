@using Pie.Data.Models.Out;
@if (DocVm != null)
{
    <table class="table table-sm table-borderless">
        <tr>
            <td>Получатель:</td>
            <th>@DocVm?.Value?.Partner?.Name</th>
            <td>В работе:</td>
            <th>@DocVm?.AtWorkUserName</th>
        </tr>
        <tr class="d-print-none">
            <td>Склад:</td>
            <th>@DocVm?.Value?.Warehouse?.Name</th>
            <td>Статус:</td>
            <th>@DocVm?.Value?.Status?.Name</th>
        </tr>
        <tr class="d-print-none">
            <td>Ответственный:</td>
            <th>@DocVm?.Value?.Manager?.Name</th>
            <td>Очередь:</td>
            <th>@DocVm?.Value?.Queue?.Name</th>
        </tr>
        <tr>
            <td><span class="p-0">Направление</span><span class="p-0 d-print-none"> (адрес):</span></td>
            <th>
                <span class="p-0">@DocVm?.Value?.DeliveryArea?.Name</span>
                @if (!string.IsNullOrEmpty(@DocVm?.Value?.DeliveryAddress))
                {
                    <span class="p-0 d-print-none"> (@DocVm?.Value?.DeliveryAddress)</span>
                }
            </th>
            <td>Дата отгрузки:</td>
            <th>@DocVm?.Value?.ShipDateTime</th>
        </tr>
        <tr>
            <td>Вес: </td>
            <th>@DocVm?.Weight</th>
            <td>Комментарий:</td>
            <th>@DocVm?.Value?.Comment</th>
        </tr>
    </table>

