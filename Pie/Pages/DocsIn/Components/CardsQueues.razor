@using Pie.Data.Models.In;

@if (Queues is not null && Queues.Any())
{
    <div class="row">
        @foreach (var queue in Queues)
        {
            <div class="col">
                <div class="h5">@queue.Name</div>
                @if (Docs is not null && Docs.Any() && queue.Key is not null && Docs.ContainsKey((int)queue.Key))
                {
                    <CardsQueue Docs="@Docs[(int)queue.Key]"></CardsQueue>
                }
            </div>
        }
    </div>
}

@code {
    [Parameter] public List<QueueIn>? Queues { get; set; }

    [Parameter] public Dictionary<int, List<DocIn>>? Docs { get; set; }
}

