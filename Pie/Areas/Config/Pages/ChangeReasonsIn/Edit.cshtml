@page
@model Pie.Areas.Config.Pages.ChangeReasonsIn.EditModel

@{
    ViewData["Title"] = "Изменить";
}

<h1>Изменить</h1>

<h4>Причину изменения приходника</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ChangeReason.Id" />
            <div class="form-group">
                <label asp-for="ChangeReason.Name" class="control-label"></label>
                <input asp-for="ChangeReason.Name" class="form-control" />
                <span asp-validation-for="ChangeReason.Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ChangeReason.Active" /> @Html.DisplayNameFor(model => model.ChangeReason.Active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
