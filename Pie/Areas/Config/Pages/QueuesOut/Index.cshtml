@page
@model Pie.Areas.Config.Pages.QueuesOut.IndexModel

@{
    ViewData["Title"] = "Очереди расходников";
}

<h1>Очереди расходников</h1>

<p>
    <a asp-page="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Queues[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Queues[0].Key)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Queues[0].Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Queues[0].Days)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Queues[0].Hours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Queues[0].Minutes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Queues[0].ConcreteTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Queues)
        {
            <tr>                
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Key)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Days)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Minutes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConcreteTime)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Детали</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
